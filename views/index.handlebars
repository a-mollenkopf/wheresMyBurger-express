<h1>Eat-Da-Burger</h1>
<img src="/assets/img/burgerappimg.jpg" class="img" height="180px">

<ul class="ul1">
  {{#each burgers}}
  {{#unless devoured}}
  {{>burgers/burger-block devoured=true}}
  {{/unless}}
  {{/each}}
</ul>

<ul class="ul2">
  {{#each burgers}}
  {{#if devoured}}
  {{>burgers/burger-block devoured=false}}
  {{/if}}
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">
    <input type="text" id="devour" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>